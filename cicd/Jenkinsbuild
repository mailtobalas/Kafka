pipeline {
    agent any
    tools
            {
                maven "MAVEN"
            }
    stages {
        stage('checkout') {

            steps {
                sh 'echo checkout'
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/mailtobalas/Kafka.git']]])
                sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Test') {
            steps {
                sh "mvn test"
            }
        }

    }
    post {
        always {
            echo 'Cleanup after everything!'
        }
    }
}